<div class="container my-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mb-4">Edit Item</h1>

      <%= simple_form_for @item do |f| %>
        <div class="form-inputs">
          <div class="form-group mb-3">
            <%= f.input :name, input_html: { class: 'form-control' } %>
          </div>
          <div class="form-group mb-3">
            <%= f.input :description, input_html: { class: 'form-control' } %>
          </div>
          <div class="form-group mb-3">
            <%= f.input :price, input_html: { class: 'form-control' } %>
          </div>
          <div class="form-group mb-3">
            <%= f.input :address, input_html: { class: 'form-control' } %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, 'Update Item', class: 'btn btn-success' %>
          <%= link_to 'Back', items_path, class: 'btn btn-secondary ml-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

